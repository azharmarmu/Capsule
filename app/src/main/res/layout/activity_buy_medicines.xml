<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BuyMedicinesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/placeOrderLayout"
        android:layout_alignParentTop="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:theme="@style/NoActionBar.AppBarOverlay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimaryDark"
                    app:popupTheme="@style/NoActionBar.PopupOverlay"
                    app:titleTextColor="@color/colorPrimary" />
            </android.support.design.widget.AppBarLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8dp"
                android:gravity="center"
                app:cardBackgroundColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBar">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/_8dp"
                    android:text="@string/note_prescription"
                    android:textColor="@color/colorPrimaryDark" />
            </android.support.v7.widget.CardView>

            <RadioGroup
                android:id="@+id/rgPrescriptionType"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_8dp"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/note">

                <RadioButton
                    android:id="@+id/rbSOD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Show prescription on delivery (SOD)" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_4dp"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@color/colorPrimaryDark" />

                <RadioButton
                    android:id="@+id/rbUP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Upload Prescription" />

                <RelativeLayout
                    android:id="@+id/attachedPrescriptionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@drawable/box_white"
                    android:orientation="vertical"
                    android:padding="@dimen/_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:padding="@dimen/_8dp"
                        android:text="Prescription Details"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/tvAddPrescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:onClick="addPrescription"
                        app:cardBackgroundColor="@color/colorPrimary">

                        <TextView
                            style="@style/Base.CardView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:padding="@dimen/_8dp"
                            android:text="Add Prescription"
                            android:textColor="@color/colorPrimaryDark" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvPrescriptionPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvAddPrescription"
                        android:layout_marginTop="@dimen/_4dp"
                        android:padding="@dimen/_4dp"
                        app:stackFromEnd="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/attachedMedicineLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@drawable/box_white"
                    android:padding="@dimen/_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:padding="@dimen/_8dp"
                        android:text="Medicine Details"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/tvAddMedicine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:onClick="addMedicine"
                        app:cardBackgroundColor="@color/colorPrimary">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@color/colorPrimary"
                            android:padding="@dimen/_8dp"
                            android:text="Add Medicine"
                            android:textColor="@color/colorPrimaryDark" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvMedicineList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvAddMedicine"
                        android:layout_marginTop="@dimen/_4dp"
                        app:stackFromEnd="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/attachedAddressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@drawable/box_white"
                    android:padding="@dimen/_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:padding="@dimen/_8dp"
                        android:text="@string/address_details"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/tvChangeAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:onClick="changeAddress"
                        app:cardBackgroundColor="@color/colorPrimary">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@color/colorPrimary"
                            android:padding="@dimen/_8dp"
                            android:text="@string/change_address"
                            android:textColor="@color/colorPrimaryDark" />
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvChangeAddress"
                        android:layout_marginTop="@dimen/_4dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:checked="true" />

                        <TextView
                            android:id="@+id/tvChosenAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_4dp" />
                    </LinearLayout>

                </RelativeLayout>


                <RadioGroup
                    android:id="@+id/attachedPrescriptionTypeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@drawable/box_white"
                    android:padding="@dimen/_8dp">

                    <RadioButton
                        android:id="@+id/rbOrderAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order everything as per prescription" />

                    <RadioButton
                        android:id="@+id/rbOrderSpecify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Let me specify medicines / quantity" />

                    <LinearLayout
                        android:id="@+id/medSpecifyLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16dp">

                            <EditText
                                android:id="@+id/etMedSpecify"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Medicine(s) name,quantity/duration"
                                android:inputType="textCapWords|textMultiLine"
                                android:textSize="@dimen/_12sp" />
                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20dp"
                            android:text="e.g. Crocin, 2 Strips"
                            android:textSize="@dimen/_10sp" />
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rbOrderCall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Call me for details" />
                </RadioGroup>

            </RadioGroup>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/placeOrderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_16dp"
        android:onClick="placeOrder"
        android:text="Place order"
        android:textColor="@color/colorBlack"
        android:theme="@style/AppTheme.Button" />
</RelativeLayout>