<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".meds.activity.OrderInformationActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/continueLayout"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16dp">

                    <!-- Order Everything as per prescription -->
                    <RadioButton
                        android:id="@+id/rbOrderEverything"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order everything as per prescription" />

                    <LinearLayout
                        android:id="@+id/orderEverythingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_32dp">

                            <EditText
                                android:id="@+id/etOrderEverything"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Duration of dosage in days"
                                android:inputType="number"
                                android:textSize="@dimen/_12sp" />
                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_32dp"
                            android:layout_marginTop="@dimen/_16dp"
                            android:text="e.g. 60"
                            android:textSize="@dimen/_12sp" />
                    </LinearLayout>

                    <!-- Let me specify medicines / quantity -->
                    <RadioButton
                        android:id="@+id/rbSpecifyMedicines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8dp"
                        android:text="Let me specify medicines / quantity" />

                    <LinearLayout
                        android:id="@+id/specifyMedicinesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_32dp">

                            <EditText
                                android:id="@+id/etSpecifyMedicines"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Medicine(s) name, quantity/duration"
                                android:inputType="textMultiLine"
                                android:textSize="@dimen/_12sp" />
                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_32dp"
                            android:layout_marginTop="@dimen/_16dp"
                            android:text="e.g. Crocin, 2 Strips"
                            android:textSize="@dimen/_12sp" />
                    </LinearLayout>

                    <!-- Call me for details -->
                    <RadioButton
                        android:id="@+id/rbCallMe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8dp"
                        android:text="Call me for details" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/continueLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_8dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:onClick="continuePrescription"
        android:padding="@dimen/_16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:gravity="center"
            android:text="@string/continue_key"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16sp" />
    </LinearLayout>
</RelativeLayout>